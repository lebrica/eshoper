{% extends 'base.html.twig' %}

{% block title %} Product {% endblock %}
{% block content %}
    <section>
        <div class="container">
            <div class="row">

                <div class="col-sm-9">
                    <div class="blog-post-area">
                        <h2 class="title text-center">Latest From our Blog</h2>


                    <div class="rating-area">
                        <ul class="ratings">
                            <li class="rate-this">Rate this item:</li>
                            <li>
                                {% for i in 1..5 %}
                                <i class="fa fa-star {% if avgRating >= i %}color{% endif %}"></i>
                                {% endfor %}
                            </li>
                            <li class="color">({{ countComments }} votes)</li>
                        </ul>
                    </div><!--/rating-area-->
                        <h2>{{ countComments }} Comments</h2>
                         <ul class="media-list">
                             {% for comment in productFeedback %}
                                <li class="media">
                                    <div class="media-body">
                                        <ul class="sinlge-post-meta">
                                            <li><i class="fa fa-user"></i>{{ comment.name }}</li>
                                            <li><i class="fa fa-clock-o"></i>{{ comment.date|date('H:i') }}</li>
                                            <li><i class="fa fa-calendar"></i>{{ comment.date|date('M:d:Y') }}</li>
                                        </ul>
                                        <p>{{ comment.comments }}</p>
                                        <a class="btn btn-primary" href="{{ path('one_product', {'id': comment.id}) }}"><i class="fa fa-reply"></i>Replay</a>
                                    </div>
                                </li>
                             {% endfor %}
                        </ul>
                    </div><!--/Response-area-->
                </div>
            </div>
        </div>
    </section>
{% endblock %}